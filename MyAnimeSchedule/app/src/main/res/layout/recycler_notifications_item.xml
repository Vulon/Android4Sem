<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/NIepisodeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/NIepisodeNumber"
        android:layout_alignStart="@+id/NIbanner"
        android:layout_alignEnd="@+id/NIbanner"
        android:layout_marginStart="0dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="0dp"
        android:fontFamily="@font/architects_daughter"
        android:text="Episode name"
        android:textAlignment="center"
        android:textColor="@color/RedColor"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/NInotificationDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/NIepisodeName"
        android:layout_alignStart="@+id/NIbanner"
        android:layout_alignEnd="@+id/NIbanner"
        android:layout_marginStart="0dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="0dp"
        android:fontFamily="@font/architects_daughter"
        android:text="Notification Date"
        android:textAlignment="center"
        android:textColor="@color/RedColor"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/NIname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/NIbanner"
        android:layout_alignStart="@+id/NIbanner"
        android:layout_alignEnd="@+id/NIbanner"
        android:layout_marginStart="0dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="0dp"
        android:fontFamily="@font/architects_daughter"
        android:text="Name"
        android:textAlignment="center"
        android:textColor="@color/RedColor"
        android:textSize="18dp" />

    <ImageView
        android:id="@+id/NIbanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/NIepisodeNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/NIname"
        android:layout_alignStart="@+id/NIbanner"
        android:layout_alignEnd="@+id/NIbanner"
        android:layout_marginStart="0dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="0dp"
        android:fontFamily="@font/architects_daughter"
        android:text="Episode number"
        android:textAlignment="center"
        android:textColor="@color/RedColor"
        android:textSize="18dp" />
</RelativeLayout>