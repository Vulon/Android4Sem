<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/FDdetailsLabel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:text="Details"
        android:textColor="@color/yellowColor" />

    <TextView
        android:id="@+id/FDepisodesLabel2"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/FDdetailsLabel2"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_toStartOf="@+id/FDsettingsLabel2"
        android:layout_toEndOf="@+id/FDdetailsLabel2"
        android:text="Episodes"
        android:textAlignment="center"
        android:textColor="@color/RedColor" />

    <TextView
        android:id="@+id/FDsettingsLabel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/FDdetailsLabel2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="20dp"
        android:text="Settings"
        android:textAlignment="center"
        android:textColor="@color/yellowColor" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/FDepisodesListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/FDepisodesLabel2"
        android:layout_marginTop="20dp" />
</RelativeLayout>